{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "semi": true, "endOfLine": "auto" }
    ],
    "space-before-function-paren": ["error", "never"],
    "require-jsdoc": "off",
    "padded-blocks": "off",
    "linebreak-style": "off",
    "comma-dangle": "off",
    "no-unused-vars": "warn",
    "react/react-in-jsx-scope": "off",
    "spaced-comment": "off",
    "react/prop-types": "off",
    "object-curly-spacing": "off",
    "prefer-const": "off",
    "react/jsx-key": "off",
    "indent": "off",
    "max-len": "off",
    "no-useless-escape": "off"
    // eslint가 교정하려고 표시하는 것 off하려면 여기에 리스트업
    // 협업 과정에서 모두가 공유해야 함. 안 그러면 merge 시 충돌 남
  }
}
